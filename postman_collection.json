      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Generar JWT Token automáticamente",
          "function base64url(source) {",
          "    let encodedSource = CryptoJS.enc.Base64.stringify(source);",
          "    encodedSource = encodedSource.replace(/=+$/, '');",
          "    encodedSource = encodedSource.replace(/\\+/g, '-');",
          "    encodedSource = encodedSource.replace(/\\//g, '_');",
          "    return encodedSource;",
          "}",
          "",
          "function generateJWT(secret, payload) {",
          "    const header = {",
          "        'alg': 'HS256',",
          "        'typ': 'JWT'",
          "    };",
          "    ",
          "    const stringifiedHeader = CryptoJS.enc.Utf8.parse(JSON.stringify(header));",
          "    const encodedHeader = base64url(stringifiedHeader);",
          "    ",
          "    const stringifiedPayload = CryptoJS.enc.Utf8.parse(JSON.stringify(payload));",
          "    const encodedPayload = base64url(stringifiedPayload);",
          "    ",
          "    const token = encodedHeader + '.' + encodedPayload;",
          "    const signature = base64url(CryptoJS.HmacSHA256(token, secret));",
          "    ",
          "    return token + '.' + signature;",
          "}",
          "",
          "// Solo generar si no existe o está expirado",
          "const currentToken = pm.environment.get('jwt_token');",
          "const secret = pm.environment.get('jwt_secret');",
          "",
          "if (!currentToken || currentToken === '') {",
          "    const now = Math.floor(Date.now() / 1000);",
          "    const payload = {",
          "        userId: parseInt(pm.environment.get('user_id')),",
          "        email: pm.environment.get('user_email'),",
          "        iat: now,",
          "        exp: now + (24 * 60 * 60) // 24 horas",
          "    };",
          "    ",
          "    const token = generateJWT(secret, payload);",
          "    pm.environment.set('jwt_token', token);",
          "    console.log('✓ JWT Token generado automáticamente');",
          "    console.log('Token expira en 24 horas');",
          "}"
        ]
      }
    }
